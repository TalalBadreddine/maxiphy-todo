# Environment
NODE_ENV=development
PORT=3001

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/maxiphy?schema=public"

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ACCESS_EXPIRES_IN=20d
JWT_ISSUER=maxiphy
JWT_AUDIENCE=maxiphy

# Frontend
FRONTEND_URL=http://localhost:3000

# Security
BCRYPT_ROUNDS=12

# Auth Settings
LOGIN_MAX_ATTEMPTS=5
LOGIN_LOCKOUT_DURATION=900000
RESET_TOKEN_EXPIRES_IN=3600000

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=talalbadreddine@gmail.com
SMTP_PASS=xkok nlvo ehch tvhd
EMAIL_FROM="Maxiphy <talalbadreddine@gmail.com>"


# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://localhost:6379

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Rate Limiting
THROTTLE_TTL=60000
THROTTLE_LIMIT=10

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_ENABLED=true
LOG_CONSOLE_ENABLED=true
LOG_DIRECTORY=./logs


COOKIE_HTTP_ONLY=true
COOKIE_SAME_SITE=strict

# Application Metadata
APP_NAME="Maxiphy Todo Application"
APP_VERSION=1.0.0
API_PREFIX=api/v1
ENABLE_SWAGGER=true
SWAGGER_PATH=/docs

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_TIMEOUT=5000

# File Upload (if needed)
MAX_FILE_SIZE=5242880
UPLOAD_DIR=uploads


# Database Pool Configuration
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_CONNECTION_TIMEOUT=30000

# Background Jobs
QUEUE_REDIS_HOST=localhost
QUEUE_REDIS_PORT=6379
QUEUE_REDIS_DB=1
EMAIL_QUEUE_ATTEMPTS=3
EMAIL_QUEUE_DELAY=5000